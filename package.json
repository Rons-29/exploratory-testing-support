{
  "name": "exploratory-testing-support",
  "version": "1.0.0",
  "description": "探索的テスト支援サービス - Chrome拡張機能とバックエンドAPI",
  "main": "dist/backend/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:backend\"",
    "dev:extension": "webpack --config config/webpack.config.js --mode development --watch",
    "dev:extension:reload": "webpack --config config/webpack.config.js --mode development --watch && node scripts/extension-reloader.js",
    "dev:extension:auto": "concurrently \"webpack --config config/webpack.config.js --mode development --watch\" \"node scripts/chrome-extension-reloader.js\"",
    "dev:backend": "nodemon --exec ts-node --project tsconfig.backend.json src/backend/index.ts",
    "build": "npm run build:extension && npm run build:backend",
    "build:extension": "webpack --config config/webpack.config.js --mode production",
    "build:backend": "tsc -p tsconfig.backend.json",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "debug:tests": "node scripts/debug-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "dev:test-server": "http-server test-pages -p 3000 -o",
    "bug-report": "node scripts/bug-report.js",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,md}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "setup": "npm install && npm run db:migrate",
    "start": "npm run build && npm run dev",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f db",
    "db:psql": "docker compose exec -it db psql -U ets -d ets",
    "db:reinit": "docker compose down -v && docker compose up -d db"
  },
  "keywords": [
    "testing",
    "exploratory-testing",
    "chrome-extension",
    "quality-assurance",
    "automation"
  ],
  "author": "Rons-29",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/chrome": "^0.0.254",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rons-29/exploratory-testing-support.git"
  },
  "bugs": {
    "url": "https://github.com/Rons-29/exploratory-testing-support/issues"
  },
  "homepage": "https://github.com/Rons-29/exploratory-testing-support#readme"
}
